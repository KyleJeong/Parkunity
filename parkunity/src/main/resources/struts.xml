<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <constant name="struts.devMode" value="true" />
    
    <package name="sample" namespace="/" extends="struts-default">
		<action name="index" class="parkunity.action.HelloAction">
			<result name="success">/WEB-INF/view/main/main.jsp</result>
		</action>
    </package>
    
    <package name="category" namespace="/" extends="struts-default">
		<action name="board" class="parkunity.action.BoardAction" method = "categorySelect">
			<result name="success">/WEB-INF/view/board/boardList.jsp</result>
		</action>
		<action name="categoryinsert" class="parkunity.action.BoardAction" method = "categoryInsert">
			<result name="redirect" type="redirect">${url}</result>
		</action>
		<action name="categorydelete" class="parkunity.action.BoardAction" method = "categoryDelete">
			<result name="redirect" type="redirect">${url}</result>
		</action>
		<action name="categoryupdate" class="parkunity.action.BoardAction" method = "categoryUpdate">
			<result name="redirect" type="redirect">${url}</result>
		</action>
    </package>
    
    
</struts>